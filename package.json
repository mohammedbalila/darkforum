{
  "name": "forum",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "watch-server": "nodemon -r dotenv/config src/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Node\" -c \"yello.bold, cyan.bold\" \"npm run watch-server\"",
    "test": "mocha",
    "deploy": "sh ./deploy.sh",
    "docker:start": "cross-env NODE_ENV=production pm2-docker start ./src/server.js",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:mustafabalila/darkforum.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mustafabalila/darkforum/issues"
  },
  "homepage": "https://github.com/mustafabalila/darkforum#readme",
  "dependencies": {
    "aws-sdk": "^2.630.0",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongo-round": "^1.0.0",
    "mongoose": "^5.8.6",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "nodemailer": "^6.4.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "redis": "^3.0.2",
    "swagger-client": "^3.9.6",
    "swagger-jsdoc": "^3.5.0",
    "swagger-ui-express": "^4.1.3",
    "uuidv4": "^6.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1"
  }
}
